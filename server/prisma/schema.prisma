generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String    @id @default(uuid())
  email                 String    @unique
  password              String
  firstName             String
  lastName              String
  refreshToken          String?
  role                  UserRole  @default(ETTUDIANT)
  phone                 String?
  avatarUrl             String?
  enrolledAt            DateTime  @default(now())
  lastLogin             DateTime?
  isVerified            Boolean   @default(false)
  verificationCode      String?
  codeExpiration        DateTime?
  phoneVerificationCode String?

  // Relation
  schoolInfo SchoolInfo?
}

model SchoolInfo {
  id      String @id @default(uuid())
  class   String
  filiere String
  state   String
  school  String
  userId  String @unique
  user    User   @relation(fields: [userId], references: [id])
}

enum UserRole {
  ETTUDIANT
  ENSEIGNANT
  PARENT
  PREFECT
  ADMIN
}
